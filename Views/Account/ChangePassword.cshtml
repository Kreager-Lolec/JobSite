@model JobSite.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна пароля";
}
<link href="~/css/passwordpage.css" rel="stylesheet" type="text/css" />
<div class="content grid-item-validation">
    <form method="post" asp-action="ChangePassword" asp-controller="Account">
        @{
            <h2 class="header-log">Зміна пароля для користувача @Model.Email</h2>
        }
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div>
            <label asp-for="OldPassword">Старий пароль</label><br />
            <div>
                <span asp-validation-for="OldPassword"></span>
            </div>
            <input asp-for="OldPassword" />
        </div>
        <div>
            <label asp-for="NewPassword">Новий пароль</label><br />
            <div>
                <span asp-validation-for="NewPassword"></span>
            </div>
            <input asp-for="NewPassword" />
        </div>
        <div>
            <a href="/Account/ConfirmPerson">Забули пароль?</a>
        </div>
        <div class="form-group">
            <p>     </p>
        </div>
        <div>
            <input type="submit" value="Зберегти" class="btn btn-default" />
        </div>
    </form>
</div>