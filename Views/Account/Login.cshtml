@model JobSite.ViewModels.LoginViewModel

<div class="content grid-item-validation">
    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <h2 class="header-log">Вхід на сайт</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <div>
                <span asp-validation-for="Email"></span>
            </div>
            <input asp-for="Email" />
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <div>
                <span asp-validation-for="Password"></span>
            </div>
            <input asp-for="Password" />
        </div>
        <div>
            <label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe" />
        </div>
        <div>
            <a href="/Account/ConfirmPerson">Забули пароль?</a>
        </div>
        <div class="form-group">
            <p>     </p>
        </div>
        <div>
            <input type="submit" value="Увійти" class="btn btn-outline-dark" />
        </div>
        <div class="form-group">
            <p>     </p>
        </div>
        <a asp-action="Register" asp-controller="Account" class="btn btn-outline-dark">Зареєструватися</a>
    </form>
</div>
