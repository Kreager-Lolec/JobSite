@model JobSite.ViewModels.RegisterViewModel


<div class="content grid-item-validation">
    <form method="post" asp-controller="Account" asp-action="Register" class="content grid-item">
        <h2>Реєстрація</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="content">
            <div>
                <label asp-for="UserName">Уведіть Ім'я</label><br />
                <div>
                    <span asp-validation-for="UserName" />
                </div>
                <input asp-for="UserName" />
            </div>
            <div>
                <label asp-for="Email">Уведіть Email</label><br />
                <div>
                    <span asp-validation-for="Email" />
                </div>
                <input type="text" asp-for="Email" />
            </div>
            <div>
                <label asp-for="Password">Уведіть пароль</label><br />
                <div>
                    <span asp-validation-for="Password" />
                </div>
                <input asp-for="Password" />
            </div>
            <div>
                <div>
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <label asp-for="ConfirmPassword">Повторіть пароль</label><br />
                <input asp-for="ConfirmPassword" />
            </div>
            <div class="form-group">
                <p>     </p>
            </div>
            <div class="register-submit form-group">
                <input type="submit" value="Підтвердити" class="btn btn-outline-dark" />
            </div>
            <a asp-action="Login" asp-controller="Account" class="btn btn-outline-dark">Повернутися назад</a>
        </div>
    </form>
</div>

